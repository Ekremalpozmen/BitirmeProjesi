@model BitirmeProjesi.ViewModels.Vet.VetModel

@using (Html.BeginForm("EditProfile", "Profile", new { Area = "Vet" }, FormMethod.Post))

{
    @Html.HiddenFor(x => x.Id)
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    <label class="form-label">Ad</label>
                    @Html.TextBoxFor(m => m.Name, null, new { @class = "form-control ", required = "required" })
                </div>
                <div class="form-group">
                    <label class="form-label">Soyad</label>
                    @Html.TextBoxFor(m => m.SurName, null, new { @class = "form-control ", required = "required" })
                </div>
                <div class="form-group">
                    <label class="form-label">Email</label>
                    @Html.TextBoxFor(m => m.Email, null, new { @class = "form-control ", required = "required" })
                </div>
                <div class="form-group">
                    <label class="form-label">Kullanıcı Adı</label>
                    @Html.TextBoxFor(m => m.UserName, null, new { @class = "form-control ", required = "required" })
                </div>
                <div class="form-group">
                    <label class="form-label">Üniversite</label>
                    @Html.TextBoxFor(m => m.University, null, new { @class = "form-control ", required = "required" })
                </div>
                <div class="form-group">
                    <label class="form-label">Uzmanlık Alanları</label>
                    @Html.TextBoxFor(m => m.Expertise, null, new { @class = "form-control ", required = "required" })
                </div>
                <div class="form-group">
                    <label class="form-label">Mezuniyet Tarihi</label>
                    @Html.TextBoxFor(m => m.GraduationDate, null, new { @class = "form-control ", type = "date", required = "required" })
                </div>
                <div class="form-group">
                    <label class="form-label">Çalıştığı Kurum</label>
                    @Html.TextBoxFor(m => m.WorkShopName, null, new { @class = "form-control ", required = "required" })
                </div>
                <div class="form-group">
                    <label class="form-label">Telefon Numarası</label>
                    @Html.TextBoxFor(m => m.PhoneNumber, null, new { @class = "form-control ", required = "required" })
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="form-group form-group-sm row">
        <div class="col-xs-12">
            <button class="btn btn-secondary" type="button" data-bs-dismiss="modal"><span style="color: white" class="fa fa-times"></span>&nbsp;&nbsp;Vazgeç</button>
            <button type="submit" class="btn btn-success"><span style="color: white" class="fa fa-check"></span>&nbsp;&nbsp;Kaydet</button>
        </div>
    </div>
    <div class="clearfix"></div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-tagsinput/0.8.0/bootstrap-tagsinput.js"></script>
}



