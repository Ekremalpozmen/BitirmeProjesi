@model BitirmeProjesi.ViewModels.Vet.VetModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Vet/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h1></h1>
<div class="row">
    <div class="col-xl-4">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Profilim</div>
            </div>
            <div class="card-body">
                <div class="text-center chat-image mb-5">
                    <div class="avatar avatar-xxl chat-profile mb-3 brround">
                        <a class="" href="profile.html"><img alt="avatar" src="../assets/images/users/7.jpg" class="brround"></a>
                    </div>
                    <div class="main-chat-msg-name">
                    </div>
                </div>
                <div>
                    <a class="mb-1 text-dark fw-semibold">Profil Bilgileri</a> <br />
                    <a data-modal-form="true"
                       data-modal-size="modal-xl"
                       data-modal-title="Şifre Güncelle"
                       href="@Url.Action("EditPassword","Profile",routeValues: new {Area = "Vet",userId = Model.Id})"
                       class="mb-1 text-dark fw-semibold"
                       style="display:table-caption">
                        Şifre Güncelle
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-8">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Profili Düzenle</h3>
                <div class="btn-profile">
                    <a data-modal-form="true"
                       data-modal-size="modal-xl"
                       data-modal-title="Profili Düzenle"
                       href="@Url.Action("EditProfile","Profile",routeValues: new {Area = string.Empty,userId = Model.Id})"
                       class="btn btn-primary mt-1 mb-1"
                       style="display:table-caption">
                        Profili Düzenle
                    </a>

                </div>
            </div>
            <div class="card-body">
                <form>
                    <div class="row">
                        <div class="col-lg-6 col-md-12">
                            <div class="form-group">
                                <label for="exampleInputname">Ad</label>
                                <input disabled="disabled" type="text" class="form-control" id="exampleInputname" placeholder="Ad" value="@Model.Name">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-12">
                            <div class="form-group">
                                <label for="exampleInputname1">Soyad</label>
                                <input disabled="disabled" type="text" class="form-control" id="exampleInputname1" placeholder="Soyad" value="@Model.SurName">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email</label>
                        <input disabled="disabled" type="email" class="form-control" id="exampleInputEmail1" placeholder="Email" value="@Model.Email">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputname">Kullanıcı Adı</label>
                        <input disabled="disabled" type="text" class="form-control" id="exampleInputname" placeholder="Kullanıcı Adı" value="@Model.UserName">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputname">Üniversite</label>
                        <input disabled="disabled" type="text" class="form-control" id="exampleInputname" placeholder="Üniversite" value="@Model.University">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputname">Uzmanlık Alanları</label>
                        <input disabled="disabled" type="text" class="form-control" id="exampleInputname" placeholder="Uzmanlık Alanları" value="@Model.Expertise">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputname">Mezuniyet Tarihi</label>
                        <input disabled="disabled" type="text" class="form-control" id="exampleInputname" placeholder="Mezuniyet Tarihi" value="@Model.GraduationDate">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputname">Çalıştığı Kurum</label>
                        <input disabled="disabled" type="text" class="form-control" id="exampleInputname" placeholder="Çalıştığı Kurum" value="@Model.WorkShopName">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputname">Telefon Numarası</label>
                        <input disabled="disabled" type="text" class="form-control" id="exampleInputname" placeholder="Telefon Numarası" value="@Model.PhoneNumber">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


