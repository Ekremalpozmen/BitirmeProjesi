@model List<BitirmeProjesi.ViewModels.Vet.QuestionListViewModel> 

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Vet/Views/Shared/_Layout.cshtml";
}
<script src="~/assets/js/jquery.min.js"></script>
<br />

<div class="row row-sm">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body ">
                <h3 class="card-title">Sorular</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered text-nowrap border-bottom" id="responsive-datatable">
                        <thead>
                            <tr>
                                <th class="wd-15p border-bottom-0">Soru Başlığı</th>
                                <th class="wd-15p border-bottom-0">Kullanıcı Adı</th>
                                <th class="wd-15p border-bottom-0">Detay Gör</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                                {
                                    <tr id="@item.Id">
                                        <td>@item.Title</td>
                                        <td>@item.UserFullName</td>
                                        <td>
                                            <a data-modal-form="true"
                                               data-modal-size="modal-xl"
                                               data-modal-title="Mesajlaş"
                                               data-id="@item.Id"
                                               href="@Url.Action("VetMessagesDetail", "Message", routeValues: new {Area = "Vet",questionId = item.Id})"
                                               data-hook-beforeunload="true"
                                               class="btn btn-secondary mt-2 ">
                                                Detay Gör
                                            </a>
                                        </td>
                                    </tr>
                                }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
