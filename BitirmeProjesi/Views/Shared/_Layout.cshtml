                                <a class="side-menu__item" data-bs-toggle="slide" href="index.html"><i class="side-menu__icon fa fa-users"></i><span class="side-menu__label">Veterinerler</span></a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!--/APP-SIDEBAR-->
