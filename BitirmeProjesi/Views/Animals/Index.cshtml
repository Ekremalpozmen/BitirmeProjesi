@model List<BitirmeProjesi.ViewModels.User.AnimalsViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="row row-sm">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body text-center">
                <h3 class="card-title">Hayvanlarım</h3>
                <a data-modal-form="true"
                   data-modal-size="modal-xl"
                   data-modal-title="  Hayvan Ekle"
                   href="@Url.Action("AddAnimal","Animals", routeValues: new {Area = string.Empty})"
                   data-hook-beforeunload="true"
                   class="btn btn-secondary mt-2 "
                   style="display:table-caption">
                    Hayvan Ekle
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered text-nowrap border-bottom" id="responsive-datatable">
                        <thead>
                            <tr>
                                <th class="wd-15p border-bottom-0">Hayvan Adı</th>
                                <th class="wd-15p border-bottom-0">Irkı</th>
                                <th class="wd-15p border-bottom-0">Doğum Tarihi</th>
                                <th class="wd-15p border-bottom-0">Cinsiyet</th>
                                <th class="wd-15p border-bottom-0">Aşı Bilgileri</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Type</td>
                                    <td>@item.Birthdate.ToString("d")</td>
                                    <td>@item.Gender</td>
                                    <td>
                                        <a data-modal-form="true"
                                           data-modal-size="modal-xl"
                                           data-modal-title="Aşı Bilgileri"
                                           href="#"
                                           data-hook-beforeunload="true"
                                           class="btn btn-secondary mt-2 ">
                                            Aşı Bilgileri
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


