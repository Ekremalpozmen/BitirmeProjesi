@model  List<BitirmeProjesi.ViewModels.User.AnimalsViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />



<div class="row row-sm">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body text-center">
                <h3 class="card-title">Hayvanlarım</h3>
                <a data-modal-form="true"
                   data-modal-size="modal-xl"
                   data-modal-title="  Hayvan Ekle"
                   href="@Url.Action("AddAnimal","Animals", routeValues: new {Area = string.Empty})"
                   data-hook-beforeunload="true"
                   class="btn btn-secondary mt-2 "
                   style="display:table-caption">
                    Hayvan Ekle
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered text-nowrap border-bottom" id="responsive-datatable">
                        <thead>
                            <tr>
                                <th>Adı</th>
                                <th>Cinsi</th>
                                <th>Doğum Tarihi</th>
                                <th>Cinsiyeti</th>
                                <th>Aşı Bilgileri</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr class="master-row">

                                    <td>@item.Name</td>
                                    <td>
                                        @item.Type
                                    </td>
                                    <td>
                                        @item.Birthdate
                                    </td>
                                    <td>
                                        @if (item.Gender == true)
                                        {
                                            <span>Erkek</span>
                                        }
                                        else
                                        {
                                            <span>Dişi</span>
                                        }
                                    </td>
                                    <td>
                                        <a data-modal-form="true"
                                           data-modal-size="modal-lg"
                                           data-modal-title="Son Aşılar"
                                           data-id="@item.Id"
                                             class="btn btn-secondary mt-2 "
                                           href="@Url.Action("VaccineList", "Animals", routeValues: new {Area = string.Empty, animalId = item.Id})">
                                    
                                            Detay
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>




