@Html.BeginForm()

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <form>
                    <div class="">
                        <div class="form-group">
                            <label class="form-label">Hayvan Adı</label>
                            @Html.TextBox("asd", null, new { @class = "form-control ", required = "required" })
                        </div>
                        <div class="form-group">
                            <label class="form-label">Irkı</label>
                            @Html.TextBox("asd", null, new { @class = "form-control ", required = "required" })
                        </div>
                        <div class="form-group">
                            <label class="form-label">Doğum Tarihi</label>
                            @Html.TextBox("asd", null, new { @class = "form-control ", required = "required" })
                        </div>
                        <div class="form-group select2-sm">
                            <label class="form-label">Cinsiyet</label>
                            @Html.DropDownList("asd", new List<SelectListItem> { new SelectListItem { Text = "Erkek", Value = "1" }, new SelectListItem { Text = "Dişi", Value = "0" } }, new { @class = "form-control select2-show-search form-select" })
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<hr />
<div class="form-group form-group-sm row">
    <div class="col-xs-12">
        <button class="btn btn-secondary" type="button" data-bs-dismiss="modal"><span style="color: white" class="fa fa-times"></span>&nbsp;&nbsp;Vazgeç</button>
        <button type="submit" id="asd" class="btn btn-success"><span style="color: white" class="fa fa-check"></span>&nbsp;&nbsp;Kaydet</button>
    </div>
</div>
<div class="clearfix"></div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-tagsinput/0.8.0/bootstrap-tagsinput.js"></script>

