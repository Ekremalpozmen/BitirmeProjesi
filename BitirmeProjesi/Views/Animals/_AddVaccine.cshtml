@model BitirmeProjesi.ViewModels.User.VaccineListViewModel

@using (Html.BeginForm("AddVaccine", "Animals", new { Area = String.Empty }, FormMethod.Post))
{
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
              @Html.HiddenFor(x=>x.AnimalId)
                <div class="form-group">
                    <label class="form-label">Aşı Adı</label>
                    @Html.TextBoxFor(m => m.VaccineName, null, new { @class = "form-control ", required = "required" })
                </div>
                <div class="form-group">
                    <label class="form-label">Yapılış Tarihi</label>
                    @Html.TextBoxFor(m => m.VaccinationDate, null, new { type = "datetime-local", required = "required" })
                </div>
                <div class="form-group">
                    <label class="form-label">Tekrar Tarihi</label>
                    @Html.TextBoxFor(m => m.RecurrenceDate, null, new { type = "datetime-local", required = "required" })
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="form-group form-group-sm row">
        <div class="col-xs-12">
            <button class="btn btn-secondary" type="button" data-bs-dismiss="modal"><span style="color: white" class="fa fa-times"></span>&nbsp;&nbsp;Vazgeç</button>
            <button type="submit" class="btn btn-success"><span style="color: white" class="fa fa-check"></span>&nbsp;&nbsp;Kaydet</button>
        </div>
    </div>
    <div class="clearfix"></div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-tagsinput/0.8.0/bootstrap-tagsinput.js"></script>
}



